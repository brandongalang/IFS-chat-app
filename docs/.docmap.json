{
  "mappings": [
    {
      "paths": ["app/garden/**", "components/garden/**", "mastra/tools/part-tools.ts"],
      "docs": ["docs/features/parts-garden.md"]
    },
    {
      "paths": ["lib/parts/**", "content/parts/**", "mastra/tools/part-content-tools.ts"],
      "docs": ["docs/features/parts-markdown.md"]
    },
    {
      "paths": ["app/check-in/**", "components/check-in/**"],
      "docs": ["docs/features/check-ins.md"]
    },
    {
      "paths": ["components/auth/**", "app/auth/**"],
      "docs": [
        "docs/features/authentication-google.md",
        "docs/runbooks/supabase-session-sync.md"
      ]
    },
    {
      "paths": ["supabase/migrations/**"],
      "docs": [
        "docs/user-memory.md",
        "docs/runbooks/memory-cron-vercel.md"
      ]
    },
    {
      "paths": [
        "app/chat/**",
        "app/_shared/hooks/**",
        "app/api/chat/**",
        "components/ethereal/**",
        "lib/database/**"
      ],
      "docs": ["docs/features/chat.md"]
    },
    {
      "paths": ["mastra/tools/**", "mastra/agents/**", "lib/insights/generator.ts"],
      "docs": ["docs/features/agent-tools.md"]
    },
    {
      "paths": ["app/api/insights/**", "lib/insights/**"],
      "docs": ["docs/features/insights.md"]
    },
    {
      "paths": ["app/onboarding/**", "components/onboarding/**", "lib/onboarding/**"],
      "docs": ["docs/features/onboarding.md"]
    },
    {
      "paths": ["lib/inbox/**", "scripts/inbox/**"],
      "docs": ["docs/runbooks/inbox-observation-job.md"]
    },
    {
      "paths": [
        "app/api/cron/memory-update/**",
        "app/api/memory/**",
        "lib/memory/**",
        "lib/api/cron-auth.ts"
      ],
      "docs": [
        "docs/user-memory.md",
        "docs/runbooks/memory-cron-vercel.md"
      ]
    },
    {
      "paths": [
        "app/layout.tsx",
        "app/globals.css",
        "components/nav/**",
        "tailwind.config.js",
        "tailwind.config.ts"
      ],
      "docs": ["docs/features/mobile-responsiveness.md"]
    }
  ]
}
